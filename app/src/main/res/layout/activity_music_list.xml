<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.zju.id21732091.wangzhen.activity.MusicListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_music_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:id="@+id/v_line"
            android:background="#eee"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/v_line"
            android:layout_centerVertical="true"

            android:layout_marginLeft="5dp"
            android:id="@+id/iv_bottom_bar_album_img"
            android:src="@drawable/ic_album_img_default"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tv_bottom_bar_music_title"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:textColor="#111"
            android:maxLines="1"
            android:layout_alignTop="@+id/iv_bottom_bar_album_img"
            android:maxLength="15"
            android:layout_toEndOf="@id/iv_bottom_bar_album_img"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_bottom_bar_artist"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_toEndOf="@id/iv_bottom_bar_album_img"
            android:layout_alignBottom="@id/iv_bottom_bar_album_img"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:id="@+id/iv_play"
            android:src="@drawable/ic_play_music"/>

    </RelativeLayout>

</LinearLayout>
