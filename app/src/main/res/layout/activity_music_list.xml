<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.zju.id21732091.wangzhen.MusicListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_music_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="6dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/iv_bottom_bar_album_img"
            android:src="@drawable/ic_album_img_default"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tv_bottom_bar_music_title"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#111"
            android:maxLines="1"

            android:layout_toEndOf="@id/iv_bottom_bar_album_img"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_bottom_bar_artist"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_toEndOf="@id/iv_bottom_bar_album_img"
            android:layout_alignBottom="@id/iv_bottom_bar_album_img"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:id="@+id/iv_play"
            android:src="@drawable/ic_play_circle"/>

    </RelativeLayout>

</LinearLayout>
