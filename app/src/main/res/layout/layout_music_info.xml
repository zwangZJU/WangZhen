<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:background="@color/white"
     >



    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv_play_flag"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_listening"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tv_music_name"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/rv_music_title"
        android:maxLines="1"

        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_music_name"
        android:id="@+id/iv_storage_flag"
        android:src="@drawable/ic_music_local"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_below="@+id/tv_music_name"
            android:layout_toRightOf="@+id/iv_storage_flag"
            android:textColor="@color/gray"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_music_name"


            android:layout_toRightOf="@+id/tv_author"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/tv_duration"
        android:background="#ddd" />
</RelativeLayout>